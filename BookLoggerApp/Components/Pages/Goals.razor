@code {
    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;

    private bool showDeleteConfirmation = false;
    private Func<Task<bool>>? _navBackHandler;
    private Func<Task<bool>>? _modalBackHandler;
    private Func<Task<bool>>? _excludeModalBackHandler;

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to ViewModel property changes for re-rendering
        ViewModel.PropertyChanged += OnViewModelPropertyChanged;
        // Subscribe to goal changes to refresh data when sessions end
        GoalService.GoalsChanged += OnGoalsChanged;

        // Register navigation back handler (Goals -> Bookshelf)
        _navBackHandler = async () =>
        {
            Navigation.NavigateTo("/");
            return true;
        };
        BackButtonService.Register(_navBackHandler);

        await ViewModel.LoadCommand.ExecuteAsync(null);
    }

    private void OnViewModelPropertyChanged(object? sender, PropertyChangedEventArgs e)
    {
        // Re-render when any ViewModel property changes
        InvokeAsync(StateHasChanged);
    }

    private async void OnGoalsChanged(object? sender, EventArgs e)
    {
        // Reload goals data when goals change
        await InvokeAsync(async () =>
        {
            await ViewModel.LoadCommand.ExecuteAsync(null);
            StateHasChanged();
        });
    }

    private void ShowCreateForm()
    {
        ViewModel.OpenCreateFormCommand.Execute(null);

        // Register modal back handler
        _modalBackHandler = async () =>
        {
            CancelCreate();
            return true;
        };
        BackButtonService.Register(_modalBackHandler);

        StateHasChanged();
    }

    private async Task OpenExcludeModal(ReadingGoal goal)
    {
        _excludeModalBackHandler = async () =>
        {
            await CloseExcludeModal();
            return true;
        };
        BackButtonService.Register(_excludeModalBackHandler);

        await ViewModel.OpenExcludeModalCommand.ExecuteAsync(goal);
        StateHasChanged();
    }

    private async Task CloseExcludeModal()
    {
        if (_excludeModalBackHandler != null)
        {
            BackButtonService.Unregister(_excludeModalBackHandler);
            _excludeModalBackHandler = null;
        }

        await ViewModel.CloseExcludeModalCommand.ExecuteAsync(null);
        StateHasChanged();
    }

    private async Task ToggleExclusion(Guid bookId)
    {
        await ViewModel.ToggleBookExclusionCommand.ExecuteAsync(bookId);
        StateHasChanged();
    }

    private async Task SaveGoal()
    {
        await ViewModel.SaveGoalCommand.ExecuteAsync(null);
        if (_modalBackHandler != null)
        {
             BackButtonService.Unregister(_modalBackHandler);
             _modalBackHandler = null;
        }
        StateHasChanged();
    }

    private async Task SaveGoalFromModal()
    {
        await ViewModel.SaveGoalCommand.ExecuteAsync(null);
        await CloseExcludeModal();
    }

    private void RequestDelete()
    {
        RegisterDeleteModalHandler();
        showDeleteConfirmation = true;
        StateHasChanged();
    }

    private Func<Task<bool>>? _deleteModalBackHandler;

    private void RegisterDeleteModalHandler()
    {
         _deleteModalBackHandler = async () =>
        {
            CancelDelete();
            return true;
        };
        BackButtonService.Register(_deleteModalBackHandler);
    }

    private async Task ConfirmDelete()
    {
        if (ViewModel.NewGoal != null)
        {
            await ViewModel.DeleteGoalCommand.ExecuteAsync(ViewModel.NewGoal.Id);
        }

        if (_deleteModalBackHandler != null)
        {
            BackButtonService.Unregister(_deleteModalBackHandler);
            _deleteModalBackHandler = null;
        }

        if (_modalBackHandler != null)
        {
            BackButtonService.Unregister(_modalBackHandler);
            _modalBackHandler = null;
        }

        showDeleteConfirmation = false;

        // Close exclude modal if it was open
        if (ViewModel.ShowExcludeModal)
        {
            if (_excludeModalBackHandler != null)
            {
                BackButtonService.Unregister(_excludeModalBackHandler);
                _excludeModalBackHandler = null;
            }
            await ViewModel.CloseExcludeModalCommand.ExecuteAsync(null);
        }

        StateHasChanged();
    }

    private void CancelDelete()
    {
        if (_deleteModalBackHandler != null)
        {
            BackButtonService.Unregister(_deleteModalBackHandler);
            _deleteModalBackHandler = null;
        }
        showDeleteConfirmation = false;
        StateHasChanged();
    }

    private void CancelCreate()
    {
        ViewModel.CancelCreateCommand.Execute(null);

        if (_modalBackHandler != null)
        {
            BackButtonService.Unregister(_modalBackHandler);
            _modalBackHandler = null;
        }

        StateHasChanged();
    }

    public void Dispose()
    {
        // Unsubscribe to prevent memory leaks
        ViewModel.PropertyChanged -= OnViewModelPropertyChanged;
        GoalService.GoalsChanged -= OnGoalsChanged;

        if (_navBackHandler != null)
        {
            BackButtonService.Unregister(_navBackHandler);
            _navBackHandler = null;
        }
        if (_modalBackHandler != null)
        {
            BackButtonService.Unregister(_modalBackHandler);
            _modalBackHandler = null;
        }
        if (_deleteModalBackHandler != null)
        {
            BackButtonService.Unregister(_deleteModalBackHandler);
            _deleteModalBackHandler = null;
        }
        if (_excludeModalBackHandler != null)
        {
            BackButtonService.Unregister(_excludeModalBackHandler);
            _excludeModalBackHandler = null;
        }
    }
}
