@page "/books/{Id:guid}"
@using BookLoggerApp.Core.ViewModels
@using BookLoggerApp.Core.Models
@using BookLoggerApp.Core.Services.Abstractions
@using BookLoggerApp.Components.Shared
@inject BookDetailViewModel ViewModel
@inject IProgressService ProgressService
@inject IImageService ImageService
@inject IWishlistService WishlistService
@inject Microsoft.AspNetCore.Components.NavigationManager Navigation

<PageTitle>@(ViewModel.Book?.Title ?? "Book Details") - LoveLit</PageTitle>

<div class="book-detail-container">
    @if (ViewModel.IsBusy)
    {
        <div class="loading">Loading book details...</div>
    }
    else if (!string.IsNullOrEmpty(ViewModel.ErrorMessage))
    {
        <div class="alert alert-danger">@ViewModel.ErrorMessage</div>
    }
    else if (ViewModel.Book == null)
    {
        <div class="empty-state">
            <h2>Book not found</h2>
            <p>This book could not be loaded.</p>
            <button class="btn btn-primary" @onclick="NavigateToBookshelf">‚Üê Back to Bookshelf</button>
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="book-detail-header">
            <h1>@ViewModel.Book.Title</h1>
            <div class="book-detail-actions">
                <button class="btn btn-secondary" @onclick="NavigateToEdit">‚úèÔ∏è Edit</button>
                <button class="btn btn-secondary" @onclick="NavigateToBookshelf">‚Üê Back</button>
            </div>
        </div>

        <!-- Reading Timer - Inline on BookDetail page -->
        @if (ViewModel.Book.Status == ReadingStatus.Reading || ViewModel.Book.Status == ReadingStatus.Planned)
        {
            <ReadingTimerInline Book="@ViewModel.Book" OnSessionSaved="HandleSessionSaved" />
        }

        <!-- Main Content Grid -->
        <div class="book-detail-content">
            <!-- Cover Section (only shown if cover image loads successfully) -->
            @if (!string.IsNullOrEmpty(_coverImageDataUrl))
            {
                <div class="book-cover-section">
                    <img src="@_coverImageDataUrl" alt="@ViewModel.Book.Title" />
                </div>
            }

            <!-- Info Section -->
            <div class="book-info-section">
                <h2>Book Information</h2>

                <div class="book-meta">
                    <div class="book-meta-item">
                        <span class="book-meta-label">Author</span>
                        <span class="book-meta-value">@ViewModel.Book.Author</span>
                    </div>

                    <div class="book-meta-item">
                        <span class="book-meta-label">Status</span>
                        <span class="book-meta-value status-badge status-@ViewModel.Book.Status.ToString().ToLower()">
                            @GetStatusIcon() @ViewModel.Book.Status
                        </span>
                    </div>

                    <div class="book-meta-item">
                        <span class="book-meta-label">Shelves</span>
                        <div class="book-meta-value">
                            @if (ViewModel.Book.BookShelves != null && ViewModel.Book.BookShelves.Any())
                            {
                                <div style="display: flex; gap: 4px; flex-wrap: wrap;">
                                    @foreach (var bs in ViewModel.Book.BookShelves)
                                    {
                                        <span style="background-color: var(--bg-secondary, #eee); padding: 2px 8px; border-radius: 12px; font-size: 0.9em;">
                                            @bs.Shelf.Icon @bs.Shelf.Name
                                        </span>
                                    }
                                </div>
                            }
                            else
                            {
                                <span>None</span>
                            }
                        </div>
                    </div>

                    @if (ViewModel.Book.AverageRating.HasValue)
                    {
                        <div class="book-meta-item">
                            <span class="book-meta-label">Rating</span>
                            <span class="book-meta-value">
                                @{
                                    var rating = (int)Math.Round(ViewModel.Book.AverageRating.Value);
                                }
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <span class="star @(i <= rating ? "filled" : "empty")">‚òÖ</span>
                                }
                            </span>
                        </div>
                    }

                    @if (ViewModel.Book.PageCount.HasValue)
                    {
                        <div class="book-meta-item">
                            <span class="book-meta-label">Pages</span>
                            <span class="book-meta-value">@GetCurrentPageDisplay() / @ViewModel.Book.PageCount (@GetProgressDisplay()%)</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(ViewModel.Book.ISBN))
                    {
                        <div class="book-meta-item">
                            <span class="book-meta-label">ISBN</span>
                            <span class="book-meta-value">@ViewModel.Book.ISBN</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(ViewModel.Book.Publisher))
                    {
                        <div class="book-meta-item">
                            <span class="book-meta-label">Publisher</span>
                            <span class="book-meta-value">@ViewModel.Book.Publisher</span>
                        </div>
                    }

                    @if (ViewModel.Book.PublicationYear.HasValue)
                    {
                        <div class="book-meta-item">
                            <span class="book-meta-label">Year</span>
                            <span class="book-meta-value">@ViewModel.Book.PublicationYear</span>
                        </div>
                    }
                </div>

                @if (!string.IsNullOrEmpty(ViewModel.Book.Description))
                {
                    <div class="book-description">
                        <h3>Description</h3>
                        <p>@ViewModel.Book.Description</p>
                    </div>
                }
            </div>
        </div>

        <!-- Wishlist Info Section -->
        @if (ViewModel.Book.Status == ReadingStatus.Wishlist && ViewModel.Book.WishlistInfo != null)
        {
            <div class="wishlist-info-section">
                <h3>Wishlist Details</h3>
                <div class="wishlist-meta-grid">
                    <div class="wishlist-meta-item">
                        <span class="book-meta-label">Priority</span>
                        <span class="wishlist-priority priority-@ViewModel.Book.WishlistInfo.Priority.ToString().ToLower()">
                            @GetPriorityLabel(ViewModel.Book.WishlistInfo.Priority)
                        </span>
                    </div>
                    @if (!string.IsNullOrEmpty(ViewModel.Book.WishlistInfo.RecommendedBy))
                    {
                        <div class="wishlist-meta-item">
                            <span class="book-meta-label">Recommended by</span>
                            <span class="book-meta-value">@ViewModel.Book.WishlistInfo.RecommendedBy</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(ViewModel.Book.WishlistInfo.WishlistNotes))
                    {
                        <div class="wishlist-meta-item">
                            <span class="book-meta-label">Notes</span>
                            <span class="book-meta-value">@ViewModel.Book.WishlistInfo.WishlistNotes</span>
                        </div>
                    }
                </div>
                <button class="btn btn-primary" style="margin-top: 1rem;" @onclick="HandleMoveToLibrary">
                    Move to Library
                </button>
            </div>
        }

        <!-- Book Ratings Section -->
        @if (ViewModel.Book.Status == ReadingStatus.Completed)
        {
            <div class="book-ratings-section">
                <h3>üìä Book Ratings</h3>

                <div class="ratings-grid">
                    <RatingInput Emoji="üë•"
                                Label="Characters"
                                Rating="@ViewModel.Book.CharactersRating"
                                RatingChanged="async (r) => await UpdateRating(BookLoggerApp.Core.Models.RatingCategory.Characters, r)" />

                    <RatingInput Emoji="üìñ"
                                Label="Plot"
                                Rating="@ViewModel.Book.PlotRating"
                                RatingChanged="async (r) => await UpdateRating(BookLoggerApp.Core.Models.RatingCategory.Plot, r)" />

                    <RatingInput Emoji="‚úçÔ∏è"
                                Label="Writing Style"
                                Rating="@ViewModel.Book.WritingStyleRating"
                                RatingChanged="async (r) => await UpdateRating(BookLoggerApp.Core.Models.RatingCategory.WritingStyle, r)" />

                    <RatingInput Emoji="üå∂Ô∏è"
                                Label="Spice Level"
                                Rating="@ViewModel.Book.SpiceLevelRating"
                                RatingChanged="async (r) => await UpdateRating(BookLoggerApp.Core.Models.RatingCategory.SpiceLevel, r)" />

                    <RatingInput Emoji="‚ö°"
                                Label="Pacing"
                                Rating="@ViewModel.Book.PacingRating"
                                RatingChanged="async (r) => await UpdateRating(BookLoggerApp.Core.Models.RatingCategory.Pacing, r)" />

                    <RatingInput Emoji="üåç"
                                Label="World Building"
                                Rating="@ViewModel.Book.WorldBuildingRating"
                                RatingChanged="async (r) => await UpdateRating(BookLoggerApp.Core.Models.RatingCategory.WorldBuilding, r)" />


                </div>

                @if (ViewModel.Book.AverageRating.HasValue)
                {
                    <div class="average-rating-display">
                        <span class="average-label">Average Rating:</span>
                        <span class="average-value">@ViewModel.Book.AverageRating.Value.ToString("F1") / 5.0</span>
                    </div>
                }
            </div>
        }

        <!-- Reading Progress -->
        @if (ViewModel.Book.Status == ReadingStatus.Reading || ViewModel.Book.Status == ReadingStatus.Completed)
        {
            <div class="reading-progress-section">
                <h3>üìä Reading Progress</h3>

                <div class="progress-stats">
                    <div class="progress-stat-item">
                        <label>Total Time</label>
                        <p>@FormatMinutes(ViewModel.TotalMinutes)</p>
                    </div>
                    <div class="progress-stat-item">
                        <label>Pages Read</label>
                        <p>@GetCurrentPageDisplay() / @(ViewModel.Book.PageCount ?? 0)</p>
                    </div>
                    <div class="progress-stat-item">
                        <label>Completion</label>
                        <p>@GetProgressDisplay()%</p>
                    </div>
                </div>

                @if (ViewModel.Book.PageCount.HasValue)
                {
                    <div class="progress-bar-large">
                        <div class="progress-fill" style="width: @GetProgressDisplay()%"></div>
                    </div>
                }
            </div>
        }

        <!-- Reading Sessions -->
        @if (ViewModel.Sessions?.Any() == true)
        {
            <div class="reading-sessions-section">
                <h3>üìö Reading Sessions (@GetSessionsCount())</h3>

                <div class="sessions-list">
                    @foreach (var session in GetRecentSessions())
                    {
                        <div class="session-item" @key="@session.Id">
                            <div class="session-date">@session.StartedAt.ToString("g")</div>
                            <div class="session-details">
                                <span>‚è±Ô∏è @session.Minutes minutes</span>
                                @if (session.PagesRead.HasValue && session.PagesRead > 0)
                                {
                                    <span>üìÑ @session.PagesRead pages</span>
                                }
                            </div>
                        </div>
                    }
                </div>

                @if (ViewModel.Sessions.Count > 5)
                {
                    <p class="sessions-note">Showing latest 5 of @GetSessionsCount() sessions</p>
                }
            </div>
        }
        <!-- Notes Section -->
        <div class="book-notes-section" style="margin-top: 2rem; padding: 1.5rem; background: var(--card-bg, #fff); border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.05);">
            <h3 style="margin-bottom: 1rem; color: var(--text-primary, #333);">üìù Book Notes</h3>
            <p class="section-hint" style="font-size: 0.9rem; color: var(--text-secondary, #666); margin-bottom: 0.5rem;">Write your thoughts, quotes, or analysis here. Auto-saved.</p>
            <textarea class="form-control notes-editor" 
                      placeholder="Write your notes here..."
                      style="width: 100%; min-height: 200px; padding: 1rem; border: 1px solid #ddd; border-radius: 8px; font-family: inherit; resize: vertical; background-color: var(--bg-tertiary); color: #ffffff;"
                      @bind="ViewModel.Book.Notes"
                      @bind:after="SaveNotes"></textarea>
            @if (_isSavingNotes)
            {
                <div class="saving-indicator" style="margin-top: 0.5rem; font-size: 0.85rem; color: var(--accent-color, #4facfe);">Saving...</div>
            }
        </div>
    }
</div>

@code {
    [Parameter] public Guid Id { get; set; }
    private Guid _lastLoadedId = Guid.Empty;
    private string? _coverImageDataUrl;

    protected override async Task OnInitializedAsync()
    {
        await LoadBookDataAsync();
    }

    protected override async Task OnParametersSetAsync()
    {
        // Only reload if the ID has changed
        if (_lastLoadedId != Id)
        {
            await LoadBookDataAsync();
        }
    }

    private async Task LoadBookDataAsync()
    {
        await ViewModel.LoadAsync(Id);
        _lastLoadedId = Id;
        await LoadCoverImageAsync();
    }

    private async Task LoadCoverImageAsync()
    {
        _coverImageDataUrl = null;

        if (ViewModel.Book == null || string.IsNullOrEmpty(ViewModel.Book.CoverImagePath))
            return;

        try
        {
            var coverPath = ViewModel.Book.CoverImagePath;

            // If it's already a URL (http/https), use it directly
            if (coverPath.StartsWith("http://", StringComparison.OrdinalIgnoreCase) ||
                coverPath.StartsWith("https://", StringComparison.OrdinalIgnoreCase))
            {
                _coverImageDataUrl = coverPath;
                return;
            }

            // Get the full path from ImageService
            var fullPath = await ImageService.GetCoverImagePathAsync(ViewModel.Book.Id);

            if (string.IsNullOrEmpty(fullPath) || !System.IO.File.Exists(fullPath))
                return;

            // Read the file and convert to Base64
            var imageBytes = await System.IO.File.ReadAllBytesAsync(fullPath);
            var base64 = Convert.ToBase64String(imageBytes);

            // Determine MIME type
            var mimeType = fullPath.EndsWith(".png", StringComparison.OrdinalIgnoreCase)
                ? "image/png"
                : "image/jpeg";

            _coverImageDataUrl = $"data:{mimeType};base64,{base64}";
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Failed to load cover image: {ex.Message}");
            _coverImageDataUrl = null;
        }
    }

    private string GetStatusIcon()
    {
        if (ViewModel.Book == null) return "";

        return ViewModel.Book.Status switch
        {
            ReadingStatus.Planned => "üìã",
            ReadingStatus.Reading => "üìñ",
            ReadingStatus.Completed => "‚úÖ",
            ReadingStatus.Abandoned => "‚ùå",
            ReadingStatus.Wishlist => "üíù",
            _ => ""
        };
    }

    private string FormatMinutes(int minutes)
    {
        if (minutes < 60) return $"{minutes}m";
        var hours = minutes / 60;
        var remainingMinutes = minutes % 60;
        return $"{hours}h {remainingMinutes}m";
    }

    private async Task StartReadingSession()
    {
        if (ViewModel.Book == null) return;

        try
        {
            // Create a new reading session
            var session = await ProgressService.StartSessionAsync(ViewModel.Book.Id);

            // Navigate to the reading page with the new session ID
            Navigation.NavigateTo($"/reading/{session.Id}");
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Failed to start reading session: {ex.Message}");
            // Fallback: just add a quick session
            await QuickAddProgress();
        }
    }

    private async Task QuickAddProgress()
    {
        await ViewModel.AddSessionAsync(15);
        await LoadBookDataAsync(); // Refresh
        await InvokeAsync(StateHasChanged); // Force UI update
    }

    private void NavigateToEdit()
    {
        Navigation.NavigateTo($"/books/{Id}/edit");
    }

    private void NavigateToBookshelf()
    {
        Navigation.NavigateTo("/bookshelf");
    }

    private async Task HandleSessionSaved()
    {
        // Reload all book data to get updated values
        await ViewModel.LoadAsync(Id);

        // Force immediate UI refresh multiple times to ensure all bindings update
        StateHasChanged();
        await Task.Yield(); // Let UI thread process
        StateHasChanged();
    }

    private int GetCurrentPageDisplay()
    {
        // Force re-evaluation on each call to ensure latest value
        return ViewModel.Book?.CurrentPage ?? 0;
    }

    private int GetProgressDisplay()
    {
        // Force re-evaluation on each call to ensure latest value
        if (ViewModel.Book == null || !ViewModel.Book.PageCount.HasValue || ViewModel.Book.PageCount.Value == 0)
            return 0;

        return (ViewModel.Book.CurrentPage * 100) / ViewModel.Book.PageCount.Value;
    }

    private int GetSessionsCount()
    {
        // Force re-evaluation on each call
        return ViewModel.Sessions?.Count ?? 0;
    }

    private IEnumerable<ReadingSession> GetRecentSessions()
    {
        // Force re-evaluation on each call
        if (ViewModel.Sessions == null)
            return Enumerable.Empty<ReadingSession>();

        return ViewModel.Sessions.OrderByDescending(s => s.StartedAt).Take(5);
    }

    private string GetCoverImageUrl()
    {
        if (string.IsNullOrEmpty(ViewModel.Book?.CoverImagePath))
            return string.Empty;

        // Ensure the path starts with / for wwwroot access
        var path = ViewModel.Book.CoverImagePath.Replace("\\", "/");
        if (!path.StartsWith("/"))
            path = "/" + path;

        return path;
    }

    private async Task UpdateRating(BookLoggerApp.Core.Models.RatingCategory category, int? rating)
    {
        if (ViewModel.Book == null) return;

        await ViewModel.UpdateRatingAsync(category, rating);
        await InvokeAsync(StateHasChanged);
    }
    private string GetPriorityLabel(BookLoggerApp.Core.Enums.WishlistPriority priority) => priority switch
    {
        BookLoggerApp.Core.Enums.WishlistPriority.High => "High",
        BookLoggerApp.Core.Enums.WishlistPriority.Medium => "Medium",
        BookLoggerApp.Core.Enums.WishlistPriority.Low => "Low",
        _ => "Medium"
    };

    private async Task HandleMoveToLibrary()
    {
        if (ViewModel.Book == null) return;
        await WishlistService.MoveToLibraryAsync(ViewModel.Book.Id);
        Navigation.NavigateTo("/bookshelf");
    }

    private bool _isSavingNotes = false;

    private async Task SaveNotes()
    {
        if (ViewModel.Book == null) return;
        
        _isSavingNotes = true;
        StateHasChanged();
        
        // Debounce/delay could be added here if needed, but for now direct save on blur/after
        await ViewModel.UpdateNotesAsync(ViewModel.Book.Notes ?? string.Empty);
        
        _isSavingNotes = false;
        StateHasChanged();
    }
}
